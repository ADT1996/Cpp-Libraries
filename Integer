#ifndef ADT_INTH
#define ADT_INTH

#include<AbsNaturalNumeric>

class Integer : public AbsNaturalNumeric<int> {
	public:
		Integer(int value) {
			*(this->value) = value;
#ifdef _64BIT
			const int MAXVALUE = 2147483646;
			const int MINVALUE = -2147483647;
#else
			const int MAXVALUE = 32766;
			const int MINVALUE = -32767;
#endif
		}

		virtual string toString() {
			return string(*value);
		}

		virtual bool equal(object *object) {
			if(object == null) return false;
			if(typeid(AbsNumeric) == typeid(object))
				if(*value == ((AbsNumeric*)object)->*value) return true;
			return false;
		}

		static string getClassName() {
			return string("Integer");
		}
};

#endif
